@model ChangeUserPasswordModel
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-sm-8">
        <form asp-antiforgery="true">
            <input name="userId" type="hidden" value="@Model.UserId"/>
            <div class="form-group">
                <label>Пароль</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Password"></span>
                <input name="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label>Подтверждение пароля</label>
                <span class="invalid-feedback" asp-validation-for="@Model.ConfirmPassword"></span>
                <input name="confirmPassword" class="form-control" type="password" />
            </div>
            <button class="btn btn-primary" type="submit">Изменить пароль</button>
        </form>
    </div>
</div>