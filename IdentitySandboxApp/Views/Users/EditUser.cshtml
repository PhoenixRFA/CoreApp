@model EditUserModel

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-sm-8">
        <form asp-antiforgery="true">
            <div class="invalid-feedback" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Логин</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Username"></span>
                <input class="form-control" name="username" value="@Model.Username" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Email"></span>
                <input class="form-control" name="email" type="email" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label>Дата рождения</label>
                <span class="invalid-feedback" asp-validation-for="@Model.DateOfBirth"></span>
                <input class="form-control" name="dateOfBirth" type="date" value="@Model.DateOfBirth" />
            </div>
            <div class="form-group">
                <label>Телефон</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Phone"></span>
                <input class="form-control" name="phone" type="tel" value="@Model.Phone" />
            </div>
            <button class="btn btn-primary" type="submit">Сохранить</button>
            @if (Model.CanDelete)
            {
                <a asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
            }
            <a class="btn btn-secondary" asp-action="Index">Отмена</a>
        </form>
    </div>
</div>