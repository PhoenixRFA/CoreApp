@model CreateUserModel
@{
    ViewData["Title"] = "Создание нового пользователя";
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-sm-8">
        <form asp-antiforgery="true">
            <div class="form-group">
                <label>Логин</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Username"></span>
                <input class="form-control" name="username" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Email"></span>
                <input class="form-control" name="email" type="email" />
            </div>
            <div class="form-group">
                <label>Дата рождения</label>
                <span class="invalid-feedback" asp-validation-for="@Model.DateOfBirth"></span>
                <input class="form-control" name="dateOfBirth" type="date"/>
            </div>
            <div class="form-group">
                <label>Телефон</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Phone"></span>
                <input class="form-control" name="phone" type="tel"/>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <span class="invalid-feedback" asp-validation-for="@Model.Password"></span>
                <input class="form-control" name="password" type="password" />
            </div>
            <div class="form-group">
                <label>Подтверждение пароля</label>
                <span class="invalid-feedback" asp-validation-for="@Model.ConfirmPassword"></span>
                <input class="form-control" name="confirmPassword" type="password" />
            </div>
            <button class="btn btn-primary" type="submit">Создать</button>
            <a class="btn btn-secondary" asp-action="Index">Отмена</a>
        </form>
    </div>
</div>