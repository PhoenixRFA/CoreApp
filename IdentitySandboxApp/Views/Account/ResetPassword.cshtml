@using IdentitySandboxApp.Models.Identity
@model ResetPasswordModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<h1>@ViewData["Title"]</h1>
@*<h4>Reset your password.</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="code" type="hidden" value="@Model.Code" />
            <div class="form-group">
                <label>Email</label>
                <input name="email" class="form-control" value="@Model.Email"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <input name="password" type="password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Повторите пароль</label>
                <input name="confirmPassword" type="password" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сбросить</button>
        </form>
    </div>
</div>

@section Scripts {
    @*<partial name="_ValidationScriptsPartial" />*@
}
