@model AccountIndexModel
@{
    ViewData["Title"] = "Профиль";
}

<h4>@ViewData["Title"]</h4>
@if (Model.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
<div class="row">
    <div class="col-sm-3">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item"><a class="nav-link" id="profile" asp-action="Index">Профиль</a></li>
            <li class="nav-item"><a class="nav-link" id="email" asp-action="Email">Email</a></li>
            <li class="nav-item"><a class="nav-link" id="change-password" asp-action="ChangePassword">Пароль</a></li>
            <li class="nav-item"><a class="nav-link" id="external-login" asp-action="ExternalLogins">Внешние логины</a></li>
            <li class="nav-item"><a class="nav-link" id="two-factor" asp-action="TwoFactorAuthentication">Двухфакторная аутентификация</a></li>
            <li class="nav-item"><a class="nav-link" id="personal-data" asp-action="PersonalData">Персональные данные</a></li>
            <li class="nav-item"><a class="nav-link" id="jwt-token" asp-action="GenerateJWTToken">JWT токен</a></li>
        </ul>

    </div>
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Логин</label>
                <input name="username" class="form-control" disabled value="@Model.Username"/>
            </div>
            <div class="form-group">
                <label>Телефон</label>
                <input name="phoneNumber" class="form-control" value="@Model.PhoneNumber"/>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    @*<partial name="_ValidationScriptsPartial" />*@
}